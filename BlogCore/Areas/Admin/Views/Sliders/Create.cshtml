@model BlogCore.Models.ViewModels.SliderVM
@{
    ViewData["Title"] = "Crear Slider";
}
<br />
<br />
<h3 class="text-center">Crear un nuevo Slider</h3>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="container">
        <div class="row px-2 offset-1 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-10 mt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label>
                            <label asp-for="Slider.Name"></label>
                        </label>

                    </div>
                    <div class="col-8 mb-2">
                        <input asp-for="Slider.Name" class="form-control" placeholder="Ingrese Nombre" />
                        <span asp-validation-for="Slider.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>
                            <label asp-for="Slider.State" ></label>
                        </label>

                    </div>
@*                     <div class="col-8 mb-2">
                        @Html.DropDownListFor(m=>m.Slider.State, Model.ListSliderStatus,
                        new { @class= "form-control"})
                    </div> *@
                    <div class="col-8 mb-2">
                        <input asp-for="Slider.State" />
                        <span asp-validation-for="Slider.State" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>
                            <label asp-for="Slider.UrlImage"></label>
                        </label>

                    </div>
                    <div class="col-8 mb-2">
                        <input type="file" name="files" id="uploadFile" class="form-control" />
                        <span asp-validation-for="Slider.UrlImage" class="text-danger"></span>
                    </div>
                </div>

                <br />
                <div class="form-group row">
                    <br /><br />
                    <div class="col-8">
                        <partial name="_ViewCreateBack" />
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.6.2/tinymce.min.js" integrity="sha512-lLE5tUMZXmDmyGWI5KDlFemVusXiALcU1lPibL4xkPbPvuOXfXcdoeU3KBDxWp18/KOzrfKkgsscN1t9740ciA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        tinymce.init({
            selector: "textarea",
            plugins: "list",
            menubar: "file edit format"
        })
    </script>
}
