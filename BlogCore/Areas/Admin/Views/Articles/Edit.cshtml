@model BlogCore.Models.ViewModels.ArticleVM
@{
    ViewData["Title"] = "Editar Artículo";
}
<br />
<br />
<h3 class="text-center">Editar Artículo</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    @* Se envia el ID del articulo como campo oculto *@
    <input type="hidden" asp-for="Article.Id" />
    <div class="container">
        <div class="row px-2 offset-1 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-10 mt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label>
                            <label asp-for="Article.Name"></label>
                        </label>

                    </div>
                    <div class="col-8 mb-2">
                        <input asp-for="Article.Name" class="form-control" placeholder="Ingrese Nombre" />
                        <span asp-validation-for="Article.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>
                            <label asp-for="Article.Description"></label>
                        </label>

                    </div>
                    <div class="col-8 mb-2">
                        <textarea asp-for="Article.Description" class="form-control" style="height:200px;" placeholder="Ingrese Descripción"></textarea>
                        <span asp-validation-for="Article.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>
                            <label for="Categoría">Categoría</label>
                        </label>

                    </div>
                    <div class="col-8 mb-2">
                        @Html.DropDownListFor(m=>m.Article.CategoryId, Model.ListCategories, "-- Favor seleccionar --",
                        new { @class= "form-control"})
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>
                            <label asp-for="Article.UrlImage"></label>
                        </label>

                    </div>
                    <div class="col-8 mb-2">
                        <input type="file" name="files" id="uploadFile" class="form-control" />
                    </div>
                </div>

                <br />
                <div class="form-group row">
                    <br /><br />
                    <div class="col-8">
                        <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Article.Id">Actualizar</button>
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                    </div>
                </div>
                <div class="col-4 pt-3">
                    <img src="@Model.Article.UrlImage" alt="imagen previa" width="50%" class="img-thumbnail rounded float-left" />

                </div>
            </div>

        </div>
    </div>
</form>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.6.2/tinymce.min.js" integrity="sha512-lLE5tUMZXmDmyGWI5KDlFemVusXiALcU1lPibL4xkPbPvuOXfXcdoeU3KBDxWp18/KOzrfKkgsscN1t9740ciA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        tinymce.init({
            selector: "textarea",
            plugins: "list",
            menubar: "file edit format"
        })
    </script>

}
