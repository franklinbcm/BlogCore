@model BlogCore.Models.Category
@{
    ViewData["Title"] = "Editar Categoría";
}
<br />
<br />
<h3 class="text-center">Editar Categoría</h3>
<form method="post" asp-action="Edit">
    <div class="container">
        <div class="row px-2 offset-1 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-10 mt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label>
                            <label asp-for="Name"></label>
                        </label>

                    </div>
                    <div class="col-8 mb-2">
                        <input asp-for="Name" class="form-control" placeholder="Ingrese Nombre" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>
                            <label asp-for="Order"></label>
                        </label>

                    </div>
                    <div class="col-8 mb-2">
                        <input asp-for="Order" class="form-control" placeholder="Ingrese Orden" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <br /><br />
                    <div class="col-8">
                        <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id" >Actualizar</button>
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
