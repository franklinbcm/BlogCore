@model BlogCore.Models.Article
@{
    ViewData["Title"] = "Detalle Artículo";
}
<div class="container">
    <div class="card">
        <div class="card-header bg-light text-light ml-0 row container">
            <div class="col-12 col-md-6">
                <h4 class="text-primary">@Model.Name</h4>
            </div>
            <div class="col-12 col-md-6 text-md-end">
                <h4 class="text-primary">@Model.FechaCreacion</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <img src="@Model.UrlImage" alt="image" width="100%" class="img-thumbnail mx-auto d-block" />
                    <p class="text-secondary">@Html.Raw(Model.Description)</p>
                </div>
            </div>

        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Volver a lista</a>
                </div>
            </div>
        </div>
    </div>

</div>